# =============================================================================
# EditorConfig - Consistent coding styles across editors
# =============================================================================
# https://editorconfig.org
# Most editors support this natively or via plugin

# Top-most EditorConfig file
root = true

# -----------------------------------------------------------------------------
# DEFAULT (all files)
# -----------------------------------------------------------------------------
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# -----------------------------------------------------------------------------
# PYTHON
# -----------------------------------------------------------------------------
[*.py]
indent_size = 4
max_line_length = 100

# -----------------------------------------------------------------------------
# JAVASCRIPT / TYPESCRIPT / JSON
# -----------------------------------------------------------------------------
[*.{js,jsx,ts,tsx,json,jsonc}]
indent_size = 2

# -----------------------------------------------------------------------------
# WEB (HTML, CSS, SCSS)
# -----------------------------------------------------------------------------
[*.{html,css,scss,sass,less}]
indent_size = 2

# -----------------------------------------------------------------------------
# YAML
# -----------------------------------------------------------------------------
[*.{yml,yaml}]
indent_size = 2

# -----------------------------------------------------------------------------
# MARKDOWN
# -----------------------------------------------------------------------------
[*.md]
trim_trailing_whitespace = false  # Trailing spaces are meaningful in MD
indent_size = 2

# -----------------------------------------------------------------------------
# MAKEFILES
# -----------------------------------------------------------------------------
[Makefile]
indent_style = tab

[*.mk]
indent_style = tab

# -----------------------------------------------------------------------------
# SHELL SCRIPTS
# -----------------------------------------------------------------------------
[*.{sh,bash,zsh}]
indent_size = 4

# -----------------------------------------------------------------------------
# GO
# -----------------------------------------------------------------------------
[*.go]
indent_style = tab

# -----------------------------------------------------------------------------
# RUST
# -----------------------------------------------------------------------------
[*.rs]
indent_size = 4

# -----------------------------------------------------------------------------
# CONFIG FILES
# -----------------------------------------------------------------------------
[*.{toml,ini,cfg}]
indent_size = 4

[.gitconfig]
indent_style = tab

# -----------------------------------------------------------------------------
# DOCKER
# -----------------------------------------------------------------------------
[Dockerfile*]
indent_size = 4

[docker-compose*.yml]
indent_size = 2
